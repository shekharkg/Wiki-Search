<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/dimen8"
  android:paddingEnd="@dimen/dimen16"
  android:paddingStart="@dimen/dimen16"
  android:paddingTop="@dimen/dimen8">

  <ImageView
    android:id="@+id/resultIV"
    android:layout_width="@dimen/searchResultIvDimen"
    android:layout_height="@dimen/searchResultIvDimen"
    android:contentDescription="@string/app_name"/>

  <ProgressBar
    android:id="@+id/imageLoader"
    android:layout_width="@dimen/searchResultIvDimen"
    android:layout_height="@dimen/searchResultIvDimen"
    android:padding="@dimen/dimen16"/>

  <TextView
    android:id="@+id/titleTV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen8"
    android:layout_toEndOf="@+id/resultIV"
    android:fontFamily="@font/roboto_medium"
    android:paddingEnd="@dimen/dimen8"
    android:paddingStart="@dimen/dimen8"
    android:textColor="@android:color/black"
    android:textSize="@dimen/textTitle"/>

  <TextView
    android:id="@+id/descTV"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/titleTV"
    android:layout_toEndOf="@+id/resultIV"
    android:fontFamily="@font/roboto"
    android:paddingEnd="@dimen/dimen8"
    android:paddingStart="@dimen/dimen8"
    android:textSize="@dimen/textDesc"/>

</RelativeLayout>